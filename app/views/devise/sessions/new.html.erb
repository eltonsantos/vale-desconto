<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-custom-top text-white text-center">
          <img src="<%= asset_path('logo-cor.png') %>" alt="Logo" style="width: 147px; height: 79px;">
        </div>
        <div class="card-body">
          <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
            <% if flash[:alert] %>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
            <% end %>

            <div class="form-group mb-4">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Digite seu email" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digite sua senha" %>
            </div>

            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              <%= f.submit "Entrar", class: "btn btn-custom  form-control" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
