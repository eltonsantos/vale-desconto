<!DOCTYPE html>
<html>
  <head>
    <title>Vale Desconto</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="<%= asset_path('favicon.ico') %>" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <% if user_signed_in? %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-2" id="sidebar">
            <div class="d-flex justify-content-center align-items-center">
              <%= image_tag 'logo-cor.png', alt: 'Logo', width: 147, height: 79, class: 'sidebar-logo' %>
            </div>
            <ul>
              <li>
                <%= link_to discounts_path, class: 'menu-link' do %>
                  <%= image_tag 'money-bill-transfer-duotone.png', alt: 'Money', class: 'menu-icon-left' %>
                  Lista de descontos
                  <%= image_tag 'chevron.png', alt: 'Chevron', class: 'menu-icon-right' %>
                <% end %>
              </li>
              <li>
                <%= link_to products_path, class: 'menu-link' do %>
                  <%= image_tag 'money-bill-transfer-duotone.png', alt: 'Money', class: 'menu-icon-left' %>
                  Lista de produtos
                  <%= image_tag 'chevron.png', alt: 'Chevron', class: 'menu-icon-right' %>
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class: 'menu-link' do %>
                  <%= image_tag 'money-bill-transfer-duotone.png', alt: 'Money', class: 'menu-icon-left' %>
                  Lista de usu√°rios
                  <%= image_tag 'chevron.png', alt: 'Chevron', class: 'menu-icon-right' %>
                <% end %>
              </li>
              <li class="menu-link d-flex align-items-center"><%= current_user.email %></li>
              <li>
                <%= form_tag destroy_user_session_path, method: :delete, class: "menu-link d-flex align-items-center" do %>                  
                  <%= submit_tag "Sair", class: "form-control" %>
                <% end %>
              </li>
            </ul>
          </div>
          <div class="col-10" id="main-content">
            <%= yield %>
            <%= turbo_frame_tag "modal", target: "_top" %>
          </div>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

    <script>
      document.addEventListener('turbo:load', () => {
        document.querySelectorAll('a[data-turbo-action="advance"]').forEach(link => {
          link.addEventListener('click', event => {
            event.preventDefault();
            const url = event.currentTarget.href;
            const modal = document.getElementById('discountModal');

            if (modal) {
              // Bootstrap modal hide
              const bootstrapModal = bootstrap.Modal.getInstance(modal) || new bootstrap.Modal(modal);
              bootstrapModal.hide();

              // Wait for the modal to hide before navigating
              modal.addEventListener('hidden.bs.modal', () => {
                window.location.href = url;
              }, { once: true });
            } else {
              window.location.href = url;
            }
          });
        });
      });
    </script>
  </body>
</html>
